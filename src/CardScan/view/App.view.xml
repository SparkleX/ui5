<mvc:View controllerName="poc.CardScan.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:unified="sap.ui.unified" 
	xmlns:core="sap.ui.core"
	displayBlock="true">

	<Shell backgroundColor="#ffffff" width="100%">
		<App id="app1">
			<Panel headerText="Lower left" height="100%">
				<FlexBox alignItems="Center" justifyContent="Center">
					<unified:FileUploader id="fileUploader"  buttonOnly="true" size="8rem"  iconOnly="true" icon="sap-icon://camera" style="Emphasized" uploadOnChange="true" uploadComplete=".onUploadComplete"></unified:FileUploader>
					<core:Icon src="sap-icon://camera" color= "Tile" size="8rem" press=".onPress"/>
				</FlexBox>
			</Panel>
		</App>
	</Shell>

</mvc:View>